# Environment Variables Template
# Copy this file to .env.local and fill in the values

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project_id.firebaseio.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123
FIREBASE_MEASUREMENT_ID=G_EXAMPLE_ID

# Firebase Admin SDK (Backend)
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account_json
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_PRIVATE_KEY_ID=example_key_id
FIREBASE_ADMIN_PRIVATE_KEY=example_private_key_content
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project_id.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=example_client_id
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token

# Google Cloud AI Services
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_ENDPOINT=your_vertex_ai_endpoint

# Gemini AI Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

DOCUMENT_AI_PROCESSOR_ID=your_processor_id
TRANSLATION_API_KEY=your_translation_key
TEXT_TO_SPEECH_API_KEY=your_tts_key

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
NODE_ENV=development

# Database
DATABASE_URL=your_database_url_here

# External APIs (Optional)
STRIPE_PUBLISHABLE_KEY=pk_test_example_key
STRIPE_SECRET_KEY=sk_test_example_key
STRIPE_WEBHOOK_SECRET=whsec_example_secret

# Email Service (Optional)
SENDGRID_API_KEY=your_sendgrid_key
FROM_EMAIL=noreply@example.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_EXAMPLE_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Security
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,doc,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Development
HOT_RELOAD=true
DEBUG_MODE=false