# Environment Variables Template
# Copy this file to .env and fill in the values

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Backend)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=your-client-id
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token

# Google Cloud AI Services
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_ENDPOINT=your-vertex-ai-endpoint

# ★ REQUIRED FOR PREMIUM ANALYSIS ★
# Get your Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

DOCUMENT_AI_PROCESSOR_ID=your-document-ai-processor-id
TRANSLATION_API_KEY=your-translation-api-key
TEXT_TO_SPEECH_API_KEY=your-tts-api-key

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
NODE_ENV=development

# Database
DATABASE_URL=your-database-url

# External APIs
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@legalease.ai

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# Security
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,doc,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Development
HOT_RELOAD=true
DEBUG_MODE=false