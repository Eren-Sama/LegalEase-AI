{
  "name": "legalease-ai",
  "version": "1.0.0",
  "private": true,
  "description": "LegalEase AI - Simplify complex legal documents using AI",
  "author": "LegalEase AI Team",
  "license": "MIT",
  "keywords": [
    "legal",
    "ai",
    "document-analysis",
    "law",
    "contract-review",
    "legal-tech"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "test:unit": "pnpm run --recursive test:unit",
    "test:integration": "pnpm run --recursive test:integration",
    "test:e2e": "pnpm run --recursive test:e2e",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "setup": "pnpm install && pnpm run build",
    "deploy": "pnpm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "emulators": "firebase emulators:start",
    "firestore:rules": "firebase firestore:rules",
    "storage:rules": "firebase storage:rules",
    "functions:logs": "firebase functions:log",
    "backup": "gcloud firestore export gs://legalease-ai-backup/$(date +%Y-%m-%d)",
    "restore": "gcloud firestore import",
    "security-audit": "pnpm audit --recursive",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-next": "13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^12.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google-cloud/documentai": "^8.5.0",
    "firebase": "^10.5.0",
    "firebase-admin": "^11.11.0",
    "google-auth-library": "^10.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.9.0"
}